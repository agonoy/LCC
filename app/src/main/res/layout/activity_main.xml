<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark_transparent"
    tools:context="com.example.bagonoy.codeschool_c.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/dsblButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="6dp"
        android:text="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSOS"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/longView"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:id="@+id/latView"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="60dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="58dp"
        app:layout_constraintTop_toTopOf="@+id/longView"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />




    <ImageButton
        android:id="@+id/btnSOS"
        android:layout_width="194dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/medicalalert"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/dsblButton"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/dsblButton"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        tools:layout_editor_absoluteY="261dp"
        app:layout_constraintHorizontal_bias="0.76"
        tools:layout_editor_absoluteX="124dp"
        app:layout_constraintVertical_bias="0.496" />

    <EditText
        android:id="@+id/etText"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="phone"
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/longView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.463"
        tools:layout_editor_absoluteY="180dp" />

    <Button
        android:id="@+id/sndBtn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="SAVE"
        app:layout_constraintRight_toLeftOf="@+id/btnSOS"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/btnSOS"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="Name"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/etText"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/etMsgText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="text|textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/latView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Phone"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sndBtn"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp"
        app:layout_constraintTop_toTopOf="@+id/etText"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="61dp"
        app:layout_constraintVertical_bias="1.0" />












</android.support.constraint.ConstraintLayout>
